<%- include('../partials/header'); %>

<div class="grid-container">
  <div class="story-show">
    <% if (typeof story !== 'undefined') { %>
      <% if (story.privacy === 'PRIVATE') { %>
          <div class="story callout alert">
      <% } else if (story.privacy === 'UNLISTED') { %>
          <div class="story callout warning">
      <% } else { %>
          <div class="story callout primary">
      <% } %>
              <%- include('../partials/story-content') %>
          </div>
      <div class="callout secondary author center">
          <p><img src="<%= story.authorImage %>" alt=""></p>
          <p><%= story.authorName %></p>
          <a href="/users/<%= story.authorId %>" class="button primary">See more from <%= story.authorName %></a>
      </div>
  </div>

          <!--Comments-->
          <% if (story.allowComments) { %>

              <!--Comment form-->
              <%- include('../partials/comment-form') %>

                  <!--COMMENTS LISTING-->
              <%- include('../partials/comments') %>

         <% } else { %>
              <h3>Comments are disabled for this story</h3>
          <% } %>
      <% } else { %>
        <h1 class="title">Story Not Found</h1>
    <% } %>
  </div>
</div>

<%- include('../partials/footer'); %>
